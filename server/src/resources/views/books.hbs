<div class="mt-4">
    <div class="row">
        {{#each books}}
        <div class="col-sm-6 col-lg-3 mb-4 ">
            <div class="card">
                <a href="/books/{{this.slug}}"><img src="/upload/{{this.imageBook}}" class="card-img-top"
                        alt="{{this.nameBook}}" width="200" height="300" ></a>
                <div class="card-body" >
                    <a href="/books/{{this.slug}}">
                        <h5 class="card-title">{{this.nameBook}}</h5>
                    </a>
                    <div class="card-text">Tác giả: {{this.authorBook.nameAuthor}}</div>
                    <div class="card-text mb-3">Năm xuất bản: {{dateFormat this.yearPublisherBook "MM/YYYY"}}</div>
                    <a href="/books/{{this.slug}}" class="btn btn-primary d-block"><strong>Thông tin mượn sách</strong></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>