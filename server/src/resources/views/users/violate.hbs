<div class="mt-4">
    <form class = "mt-4" method="POST" action="/admin/users/{{user._id}}?_method=PUT" >
        <h3>Cập nhật nhân viên</h3>
        <div class="mb-3">
            <label for="ID" class="form-label">ID nhân viên</label>
            <input type="text" class="form-control" value="{{user._id}}" id="ID" name="ID" disabled>
        </div>
       <div class="mb-3">
            <label for="nameUser" class="form-label">Tên người dùng</label>
            <input type="text" class="form-control" value="{{user.nameUser}}" id="nameUser" name="nameUser">
        </div>
        <div class="mb-3">
            <label for="violateUser" class="form-label">Vi phạm</label>
            <select class="form-select" aria-label="Default select example" id="violateUser" name="violateUser">
                {{#each violate}}
                <option value="{{_id}}">{{nameViolate}}</option>
                {{/each}}
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>